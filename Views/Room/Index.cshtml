@model IEnumerable<HotelManager.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-dark">Index</h1>

<div class="d-flex justify-content-end mb-3">
    <form asp-action="Index" method="get" class="form-inline">
        <input type="text" name="searchString" class="form-control mr-2 mb-2" placeholder="Search by name" />
        <button type="submit" class="btn btn-primary mb-2">Search</button>
    </form>
</div>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card mb-4 shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">
                        <strong>Capacity:</strong> @Html.DisplayFor(modelItem => item.Capacity)<br />
                        <strong>Price:</strong> @Html.DisplayFor(modelItem => item.Price)
                    </p>
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
